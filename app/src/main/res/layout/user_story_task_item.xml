<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Task Id: T_13 Points: 3"
            android:id="@+id/user_story_task_item_id_points"
            android:textColor="#ffbf00"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add a randomizer function for character creation and test a new line system "
            android:id="@+id/user_story_task_item_description"
            android:layout_marginTop="5dp"
            android:textSize="16dp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:id="@+id/user_story_task_item_edit_btn"
        android:layout_gravity="center_vertical"
        android:textColor="#ffd84b"
        android:textSize="16dp" />
</LinearLayout>