<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sprint number"
        android:id="@+id/sprint_number_list_item" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10 mar 2016"
            android:id="@+id/start_date_sprint_item"
            android:layout_weight="1"
            android:textColor="#28ff6c"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="10 apr 2016"
            android:id="@+id/end_date_sprint_item"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="#ff5151"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>